<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jhcz.web.dao.UserDao">

	<select id="getUserById" parameterType="Int" resultType="com.jhcz.base.pojo.User">
		select * from t_user where user_id=#{userId}
	</select>

	<select id="findUserByUID" parameterType="String" resultType="com.jhcz.base.pojo.User">
		select * from T_USER where uid2 =#{uid2}
	</select>
	
	<update id="updateUser" parameterType="com.jhcz.base.pojo.User">
		update t_user set login_times = #{login_times}, last_time = #{last_time} where user_id = #{user_id}
	</update>
	
</mapper>
